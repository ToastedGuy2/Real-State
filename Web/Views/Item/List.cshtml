@model IEnumerable<Item>

@{
    ViewBag.Title = "List of Food";
    Layout = "_Layout";
}

@section CSS{
    <link rel="stylesheet" href="~/lib/notyf/notyf.min.css">
}

<h2 class="mb-3">List of Food</h2>
<table class="table table-bordered table-hover" id="itemsTable" >
    <thead >
        <tr>
            <th>@Html.DisplayNameFor(m => m.Name)</th>
            <th>@Html.DisplayNameFor(m => m.Price)</th>
            <th>@Html.DisplayNameFor(m => m.Category)</th>
            <th>@Html.DisplayNameFor(m => m.Brand)</th>
            <th>
                <button class="btn btn-success w-100" id="addBtn" data-toggle="modal" data-target="#modal"><i class="fas fa-plus-circle"></i> Add</button>
            </th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>$@item.Price.ToString("0.00")</td>
                <td>@item.Category.Name</td>
                <td>@item.Brand.Name</td>
                <td>
                    <input type="hidden" name="ItemId" value="@item.ItemId">
                    <button class="btn btn-primary"><i class="fas fa-eye"></i> See</button>
                    <button class="btn btn-warning"><i class="fas fa-pencil-alt"></i> Edit</button>
                    <button class="btn btn-danger mt-1"><i class="fas fa-trash-alt"></i> Delete</button>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Modal -->
<div class="modal fade" id="modal" tabindex="-1" aria-labelledby="modal" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title"></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        
      </div>
  </div>
</div>

@section Scripts{
    <script type="text/javascript" src="https://cdn.datatables.net/v/bs4/dt-1.10.23/datatables.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/lib/notyf/notyf.min.js"></script>
    <script src="~/js/Item/ItemList.js"></script>
}