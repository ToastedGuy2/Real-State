@model AddHouseViewModel

@{
    ViewData["Title"] = "Create";
}


<div class="row">
    <div class="col-md-4 mx-auto">
        <form asp-action="Create" enctype="multipart/form-data">
            <h1 class="mt-3"><span class="primary-color"><i class="fas fa-home"></i></span> Houses</h1>
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="mb-3">
                <label asp-for="Name" class="form-label"></label><span class="text-danger">*</span>
                <input asp-for="Name" class="form-control" placeholder="House #8" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <label asp-for="Price"></label><span class="text-danger">*</span>
            <div class="input-group">
                <span class="input-group-text">$</span>
                <input asp-for="Price" class="form-control" placeholder="1 , 23.5 , 50.23">
            </div>
            <div ><span asp-validation-for="Price" class="text-danger"></span></div>
            <div class="mb-3">
                <label asp-for="Bedrooms" class="form-label"></label><span class="text-danger">*</span>
                <input asp-for="Bedrooms" class="form-control" min="1" placeholder="1" />
                <span asp-validation-for="Bedrooms" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Bathrooms" class="form-label"></label><span class="text-danger">*</span>
                <input asp-for="Bathrooms" class="form-control" min="1" placeholder="1" />
                <span asp-validation-for="Bathrooms" class="text-danger"></span>
            </div>
            <label asp-for="Size"></label><span class="text-danger">*</span>
            <div class="input-group">
                <input asp-for="Size" class="form-control" placeholder="43.4 - 123.23 - 12" />
                <span class="input-group-text">m2</span>
            </div>
            <div class="mb-3"><span asp-validation-for="Size" class="text-danger"></span></div>
            <div class="mb-3">
                <label asp-for="ProvinceId" class="form-label"></label><span class="text-danger">*</span>
                <select asp-for="ProvinceId" class="form-select" asp-items="@Model.Provinces"></select>
            </div>
            <div class="mb-3">
                <label asp-for="ImageUploaded" class="form-label"></label><span class="text-danger">*</span>
                <input asp-for="ImageUploaded" class="form-control" type="file" accept=".png,.jpg,.jpeg">
                <span class="text-danger" asp-validation-for="ImageUploaded" id="InputTagSpan"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Description" class="form-label"></label><span class="text-danger">*</span>
                <textarea asp-for="Description" class="form-control" placeholder="lorem ipsum"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div id="features-list">
                <label class="form-label">Features (Optional)</label>
                    @foreach (var feature in @Model.Features){
                        <div class="form-check">
                        <input type="checkbox" value="@feature.FeatureId" class="form-check-input" name="features">
                        <label class="form-check-label" for="defaultCheck1">
                            @feature.Name
                        </label>
                        </div>
                    }

            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="List" class="btn btn-danger">Cancel</a>
            </div>
        </form>
    </div>
</div>
@section Scripts{
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}