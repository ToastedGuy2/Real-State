@model LoginViewModel
@{
    ViewBag.Title = "Sign In";
    Layout = "_FormsLayout";
}
@section CSS{
    <link rel="stylesheet" href="~/css/account.css">
}
    <form id="account-form" class="bg-light mx-auto shadow mt-lg-5 mt-sm-3 p-4 border border-2 rounded-3" asp-controller="Account" asp-action="Login" method="post">
    <h1 class="text-center"><a asp-controller="Home" asp-action="Index" class="primary-color">RentME</a></h1>
    <h2 class="text-center secondary-color"><i class="fas fa-user-circle"></i> Login</h2>
    @if(@TempData["ShowLoginErrors"]!=null){
    <div class="alert alert-danger alert-dismissible fade show text-center" role="alert">
         Email and/or password invalid
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    }
    <div class="mb-2">
        <label asp-for="Email" class="form-label"></label>
        <input asp-for="Email" class="form-control" placeholder="example@example.com">
        <span class="text-danger" asp-validation-for="Email"></span>
    </div>
    <div class="mb-2">
        <label asp-for="Password" class="form-label"></label>
        <input asp-for="Password" class="form-control" placeholder="**********" />
        <span class="text-danger" asp-validation-for="Password"></span>
    </div>
    <div class="form-check form-check-inline">
        <input asp-for="RememberMe" class="form-check-input">
        <label asp-for="RememberMe" class="form-check-label"></label>
    </div>
    <button type="submit" class="w-100 btn btn-primary mt-2">Login</button>
    <div class="mt-3 text-end">
        <span class="text-muted">Not registered? </span><a asp-controller="Account" asp-action="SignUp" id="sign-up-here">Sign up
                here!!</a>
    </div>
</form>
@section Scripts{
    <partial name="_ValidationScriptsPartial"/>
}