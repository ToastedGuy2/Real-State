@model LoginViewModel
@{
    ViewBag.Title = "Sign In";
}

<form class="inline-form shadow rounded p-5" asp-action="Login" method="post">
    <h1 class="text-center">Login</h1>
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" placeholder="example@example.com">
        <span class="text-danger" asp-validation-for="Email"></span>
    </div>
    <div class="form-group">
        <label asp-for="Password"></label>
        <input asp-for="Password" class="form-control" placeholder="**********" />
        <span class="text-danger" asp-validation-for="Password"></span>
    </div>
    <div class="form-check form-check-inline">
        <input asp-for="RememberMe" class="form-check-input">
        <label asp-for="RememberMe" class="form-check-label"></label>
    </div>
    <button type="submit" class="btn btn-primary mt-2">Login</button>
    <div class="mt-3 text-center">
        <span>Not registered? <a asp-controller="Account" asp-action="SignUp" class="text-primary">Sign up
                here!!</a></span>
    </div>
</form>
@section Scripts{
    <partial name="_ValidationScriptsPartial"/>
}