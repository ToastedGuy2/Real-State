@model SignUpViewModel
@{
    ViewBag.Title = "Sign Up";
    @* Layout = "_LayoutForForms"; *@
}
<form class="p-5 shadow rounded mx-auto" asp-controller="Account" asp-action="SignUp" method="post">
    <h1 class="text-center">Sign Up</h1>
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="FullName"></label>
        <input asp-for="FullName" class="form-control" placeholder="Lore ipsum">
        <span class="text-danger" asp-validation-for="FullName"></span>
    </div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" placeholder="example@example.com" />
        <span class="text-danger" asp-validation-for="Email"></span>
    </div>
    <div class="form-group">
        <label asp-for="Password"></label>
        <input asp-for="Password" class="form-control" placeholder="**********" />
        <span class="text-danger" asp-validation-for="Password">
        </span>
    </div>
    <div class="form-group">
        <label asp-for="ConfirmPassword"></label>
        <input asp-for="ConfirmPassword" class="form-control" placeholder="**********" />
        <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
    </div>
    <button type="submit" class="btn btn-primary">Sign Up</button>
    <a asp-action="Login" class="btn btn-danger">Cancel</a>
</form>
@section Scripts{
    <partial name="_ValidationScriptsPartial"/>
}