@model Entities.Service

@{
    ViewData["Title"] = "Create";
}

<h4><i class="far fa-edit"></i> Edit Service</h4>
<div class="row">
    <div class="col-md-4 mx-auto">
        <form asp-action="Create">
            <h1 class="mt-3"> <span class="text-success"><i class="fas fa-plus"></i></span> Add a <span
                    class="primary-color"><i class="fas fa-home"></i></span> Service</h1>

            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="mb-3">
                <label asp-for="Name" class="form-label"></label><span class="text-danger">*</span>
                <input asp-for="Name" class="form-control" placeholder="Service #8" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <label asp-for="Price"></label><span class="text-danger">*</span>
            <div class="input-group mb-3">
                <span class="input-group-text">$</span>
                <input asp-for="Price" class="form-control" placeholder="1 , 23.5 , 50.23">
            </div>
            <div><span asp-validation-for="Price" class="text-danger"></span></div>
            <div class="mb-3">
                <label asp-for="Description" class="form-label"></label><span class="text-danger">*</span>
                <textarea asp-for="Description" class="form-control" placeholder="lorem ipsum"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Save Service" class="btn btn-success" />
                <a asp-action="List" class="btn btn-danger">Cancel</a>
            </div>
        </form>
    </div>
</div>
@section Scripts{
    <partial name="_ValidationScriptsPartial"/>
}