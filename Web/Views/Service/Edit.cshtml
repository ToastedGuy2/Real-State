@model Entities.Service

@{
    ViewData["Title"] = "Edit";
    Layout = "_FormsLayout";
}
@section CSS{
    <link rel="stylesheet" href="~/css/form.css">
}
    <form asp-action="Edit" enctype="multipart/form-data" class="bg-light mx-auto shadow mt-lg-5 mt-sm-3 p-4 border border-2 rounded-3">
    <h1 class="text-center"><a asp-controller="Home" asp-action="Index" class="primary-color">RentME</a></h1>
    <h2 class="text-center secondary-color"><i class="far fa-edit"></i> Edit Service</h2>                        
    <input type="hidden" asp-for="ServiceId">
            <div class="mb-3">
                <label asp-for="Name" class="form-label"></label><span class="text-danger">*</span>
                <input asp-for="Name" class="form-control" placeholder="Service #8" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <label asp-for="Price"></label><span class="text-danger">*</span>
            <div class="input-group mb-3">
                <span class="input-group-text">$</span>
                <input asp-for="Price" class="form-control" placeholder="1 , 23.5 , 50.23">
            </div>
            <div ><span asp-validation-for="Price" class="text-danger"></span></div>
            <div class="mb-3">
                <label asp-for="Description" class="form-label"></label><span class="text-danger">*</span>
                <textarea asp-for="Description" class="form-control" placeholder="lorem ipsum"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Save Changes" class="btn btn-success" />
                <a asp-action="List" class="btn btn-danger">Cancel</a>
            </div>
        </form>
@section Scripts{
    <partial name="_ValidationScriptsPartial"/>
}
