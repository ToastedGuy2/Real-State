@{
    ViewData["Title"] = "House";
}
@model House
<div class="container-fluid my-3">
    <div class="row">
        <div class="col-lg-5 ">
            <img src="~/images/Houses/@Model.ImageName" class="img-fluid">
        </div>
        <div class="col-lg-4 mx-md-5 ">
            <h1 class="text-center">@Model.Name</h1>
            <p><span class="fw-bold text-muted">Price:</span><span
                    class="badge bg-primary">₡@Model.Price.ToString("N0")/month</span>
            </p>
            <p class="">@Model.Description</p>
            <ul>
                <li>
                    <p><span class="fw-bold">Location: </span>@Model.Province.Name </p>
                </li>
                <li>
                    <p><span class="fw-bold">Size:</span> @Model.Size m2</p>
                </li>
                <li>
                    <p><span class="fw-bold">Bedrooms: </span>@Model.Bedrooms</p>
                </li>
                <li>
                    <p><span class="fw-bold">Bathrooms:</span> @Model.Bathrooms</p>
                </li>
            </ul>
        </div>
        <div class="col-lg-2 border rounded border-2 py-3">
            <form action="post">
                <h5 class="text-center fw-bold">How long will you stay here?</h5>
                <div class="mb-3">
                    <label for="exampleInputEmail1" class="form-label">Months</label>
                    <input type="number" name="months" id="months" class="form-control" min="1" placeholder="1" value="1">
                </div>
                <div class="mb-3">
                    <div class="col-auto">
                        <label for="from" class="form-label">From</label>
                        <input type="text" name="from" id="from" class="form-control" disabled>
                    </div>
                </div>
                <div class="mb-3">
                    <div class="col-auto">
                        <label for="to" class="form-label">To</label>
                        <input type="text" name="to" id="to" class="form-control" disabled>
                    </div>
                </div>
                <div class="border border-bottom my-3"></div>
                <h5 class="text-center fw-bold">Services</h5>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                    <label class="form-check-label" for="flexCheckDefault">
                        Surveillance 24/7 <span class="badge rounded-pill bg-warning text-dark">₡ 125,210</span>
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="" id="flexCheckChecked">
                    <label class="form-check-label" for="flexCheckChecked">
                        Swimming Pool Maintenance <span class="badge rounded-pill bg-warning text-dark">₡ 125,210</span>
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="" id="flexCheckChecked">
                    <label class="form-check-label" for="flexCheckChecked">
                        Oshino Meme <span class="badge rounded-pill bg-warning text-dark">₡ 125,210</span>
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="" id="flexCheckChecked">
                    <label class="form-check-label" for="flexCheckChecked">
                        Araragi Koyomi <span class="badge rounded-pill bg-warning text-dark">₡ 125,210</span>
                    </label>
                </div>
                <div class="border border-bottom my-3"></div>
                <h5 class="text-center fw-bold">Costs</h5>
                <p><span class="fw-bold">Subtotal:</span> ₡ 125,210</p>
                <p><span class="fw-bold">Iva:</span> ₡ 300</p>
                <p><span class="fw-bold">Total:</span> ₡ 125,210</p>
                <div class="border border-bottom my-3"></div>
                <button type="button" class="btn w-100 btn-warning">Pay</button>
            </form>
    
        </div>
    </div>
</div>
@section Scripts{
    <script src="~/js/"></script>
}