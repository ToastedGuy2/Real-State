@{
    ViewData["Title"] = "About";
}
@section FONTS{
<link href="https://fonts.googleapis.com/css2?family=Chango&family=Montserrat:wght@400;900&display=swap" rel="stylesheet">
}
@section CSS{
    <link rel="stylesheet" href="~/css/about.css">
}


<div class="container">
    @* About us *@
    <div class="row align-items-center justify-content-center my-4" id="about-section">
        <div class="col-md-7 col-lg-5">
            <h1 class="text-center text-md-start display-2">What is <span class="primary-color bold">RentME</span>?</h1>
            <p class="text-center text-md-start display-6 definition mt-3 mt-md-0"><span class="primary-color bold">RentME</span> is like Jack and the Beanstalk’s goose that lays golden eggs. It’s something that pays you month after month, whether you are working or not.</p>
        </div>
        <div class="d-none d-md-block ms-5-md-3 col-md-5 col-lg-4">
            <img src="~/images/About.jpeg" alt="" class="img-fluid shadow-2-strong">
        </div>
    </div>

    <div class="row text-center my-5" id="meet-our-team-section">
            <h1 class="display-6 text-center">Meet the author of <span class="primary-color bold">RentME</span></h1>
                    <div class="my-3"><img src="~/images/It's me.jpg" alt="" class="my-picture rounded-circle shadow-2-strong"></div>
                    <p class="lead definition text-center">Greetings Twin Engine!! My name is <span class="bold">Kevin Jose Ordoñez Zelaya</span>, I'm a self-taught developer whom is aiming to work as a full time software developer. I think i would be a great candidate for you guys since i know the web well both front-end and back-end plus got some scripting skills.<br>        </p>
    </div>
</div>



@section scripts{
    <script src="~/js/about.js"></script>
}